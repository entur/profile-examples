                                    <!-- List of acceptable values -->
                                    <MarkedAs>activated</MarkedAs>
                                    <CustomerPurchasePackageElementRef ref="ENT:CustomerPurchasePackageElement:Snack" version="1"/>
                                </ElementUsageDependency>
                            </elementUsageDependencies>
                            
                            <!-- Either one of the ElementUsage can be used independently -->
                            <ElementUsageGroupingType>XOR</ElementUsageGroupingType>

                            <!-- *May* be executed manually later when dependency conditions are satisfied -->
                            <ElementUsagePolicy>manual</ElementUsagePolicy>

                            <!-- Elements allowed to be consumed (MarkedAs->used) when dependent element is MarkedAs=used -->
                            <elementUsages>
                                <ElementUsageRef ref="ENT:ElementActivation:CoffeeUsed" version="1"/>
                                <ElementUsageRef ref="ENT:ElementActivation:SnackUsed" version="1"/>
                            </elementUsages>
                            
                            <!-- Number of times MarkedAs=used can appear in total for given elements-->
                            <QualityStructureFactorRef ref="ENT:QualityStructureFactor:Consumption-x3" version="1"/>
                            
                            <!-- Must activate/use within 2 hours from dependent element -->
                            <!-- TimeIntervalRef ref="ENT:TimeInterval:2hours"/ --> <!-- NO LONGER APPLICABLE AS THIS IS DEFINED BY THE DependentCustomerPurchaseParameterAssignment -->
                        </DependentElementUsage>
