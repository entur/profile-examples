                                    <MarkedAs>used</MarkedAs>
                                </ElementUsageDependency>
                            </elementUsageDependencies>

                            <!-- *Must* be executed automatically when dependency conditions are satisfied -->
                            <ElementUsagePolicy>automatic</ElementUsagePolicy>

                            <!-- Both must be activated at the same time since ElementUsageGrouping=AND -->
                            <ElementUsageGroupingType>AND</ElementUsageGroupingType>
                            <elementUsages>
