                        <SalesOfferPackageElement id="ENT:SalesOfferPackageElement:PeriodPass" version="1" order="1">
                            <Name lang="no">Period pass</Name>
                            <PreassignedFareProductRef ref="ENT:PreassignedFareProduct:PeriodPass" version="1"/>
