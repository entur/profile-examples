                    </accessRightsInProduct>
                </PreassignedFareProduct>
            </fareProducts>


            <salesOfferPackages>
                <SalesOfferPackage id="ENT:SalesOfferPackage:PeriodPass" version="1">
                    <Name lang="no">Period pass Bergen</Name>
